<%- include('partials/head', { title: 'Admin' }) %>
<div class="min-h-screen">
  <header class="sticky top-0 z-10 border-b border-slate-800/60 bg-slate-950/80 backdrop-blur">
    <div class="w-full px-6 lg:px-10 py-6 flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
      <div>
        <p class="text-xs uppercase tracking-[0.4em] text-sky-200">Administration</p>
        <h1 class="text-3xl font-semibold">Gestion</h1>
        <p class="text-sm text-slate-300">
          Administrez vos catégories, favoris et cards depuis un seul espace.
        </p>
      </div>
      <div class="flex flex-wrap items-center gap-3">
        <a
          class="rounded-full border border-slate-700 px-4 py-2 text-sm text-slate-200 hover:border-slate-500"
          href="/dashboard"
        >
          Retour dashboard
        </a>
        <form method="post" action="/logout">
          <button
            class="rounded-full bg-slate-100 px-4 py-2 text-sm font-semibold text-slate-900 hover:bg-white"
            type="submit"
          >
            Déconnexion
          </button>
        </form>
      </div>
    </div>
  </header>

  <main class="w-full px-6 lg:px-10 py-10 space-y-10">
    <section class="panel rounded-3xl p-8 soft-shadow">
      <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
        <div>
          <h2 class="text-2xl font-semibold">Catégories</h2>
          <p class="text-sm text-slate-300">Créez et visualisez vos catégories.</p>
        </div>
        <span class="badge-outline rounded-full px-4 py-1 text-xs text-slate-200">
          <%= categories.length %> catégories
        </span>
      </div>
      <form method="post" action="/categories" class="mt-6 grid gap-3 md:grid-cols-[1fr_auto]">
        <input
          type="text"
          name="name"
          class="rounded-2xl border border-slate-700 bg-slate-900/70 px-4 py-3 text-sm text-slate-100 focus:border-sky-400 focus:outline-none"
          placeholder="Nom de la catégorie"
          required
        />
        <button
          class="rounded-2xl bg-sky-500 px-5 py-3 text-sm font-semibold text-white hover:bg-sky-400"
          type="submit"
        >
          Ajouter
        </button>
      </form>
      <div class="mt-6 grid gap-3 md:grid-cols-2 xl:grid-cols-3">
        <% categories.forEach((category) => { %>
          <div class="glass rounded-2xl p-4">
            <p class="text-sm font-semibold text-white"><%= category.name %></p>
            <p class="mt-2 text-xs text-slate-400">
              Créée le <%= new Date(category.created_at).toLocaleString('fr-FR') %>
            </p>
          </div>
        <% }) %>
      </div>
    </section>

    <section class="panel rounded-3xl p-8 soft-shadow">
      <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
        <div>
          <h2 class="text-2xl font-semibold">Favoris</h2>
          <p class="text-sm text-slate-300">Suivez vos liens enregistrés.</p>
        </div>
        <span class="badge-outline rounded-full px-4 py-1 text-xs text-slate-200">
          <%= favorites.length %> favoris
        </span>
      </div>
      <div class="mt-6 grid gap-3 md:grid-cols-2 xl:grid-cols-3">
        <% favorites.forEach((favorite) => { %>
          <div class="glass rounded-2xl p-4">
            <p class="text-sm font-semibold text-white"><%= favorite.title %></p>
            <p class="mt-1 text-xs text-slate-300 break-all"><%= favorite.url %></p>
            <% if (favorite.category_name) { %>
              <span class="mt-3 inline-flex w-fit rounded-full border border-slate-700 px-2 py-0.5 text-[10px] text-slate-200">
                <%= favorite.category_name %>
              </span>
            <% } %>
            <% if (favorite.description) { %>
              <p class="mt-3 text-xs text-slate-300"><%= favorite.description %></p>
            <% } %>
          </div>
        <% }) %>
      </div>
    </section>

    <section class="panel rounded-3xl p-8 soft-shadow">
      <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
        <div>
          <h2 class="text-2xl font-semibold">Cards</h2>
          <p class="text-sm text-slate-300">Vue rapide des cards existantes.</p>
        </div>
        <span class="badge-outline rounded-full px-4 py-1 text-xs text-slate-200">
          <%= cards.length %> cards
        </span>
      </div>
      <div class="mt-6 grid gap-3 md:grid-cols-2 xl:grid-cols-3">
        <% cards.forEach((card) => { %>
          <div class="glass rounded-2xl p-4">
            <div class="flex items-center justify-between gap-2">
              <p class="text-sm font-semibold text-white"><%= card.title %></p>
              <% if (card.category_name) { %>
                <span class="rounded-full border border-slate-700 px-2 py-0.5 text-[10px] text-slate-200">
                  <%= card.category_name %>
                </span>
              <% } %>
            </div>
            <p class="mt-2 text-xs text-slate-300"><%= card.content %></p>
          </div>
        <% }) %>
      </div>
    </section>
  </main>
</div>
<%- include('partials/footer') %>
