<%- include('partials/head', { title: 'Connexion' }) %>
<div class="min-h-screen flex items-center justify-center px-4 py-10">
  <div class="auth-grid w-full max-w-5xl">
    <div class="card brand-shell shadow-2xl">
      <div class="card-body">
        <span class="badge badge-outline border-white/40 text-white">Community</span>
        <h1 class="text-3xl font-bold leading-tight">
          Votre espace créatif pour suivre vos cards.
        </h1>
        <p class="text-white/80">
          Centralisez vos idées, inspirez votre équipe et restez aligné grâce à un dashboard élégant.
        </p>
        <div class="flex flex-wrap gap-3">
          <div class="badge badge-ghost border-white/30 text-white">DaisyUI</div>
          <div class="badge badge-ghost border-white/30 text-white">MySQL</div>
          <div class="badge badge-ghost border-white/30 text-white">Docker ready</div>
        </div>
      </div>
    </div>
    <div class="card glass-panel shadow-xl form-surface">
      <div class="card-body">
        <h1 class="text-2xl font-bold">Connexion</h1>
        <p class="text-base-content/70">Accédez à votre dashboard.</p>
        <% if (error) { %>
        <div class="alert alert-error mt-2">
          <span><%= error %></span>
        </div>
        <% } %>
        <form method="post" action="/login" class="space-y-4 mt-4">
          <label class="form-control">
            <div class="label">
              <span class="label-text">Email</span>
            </div>
            <input type="email" name="email" class="input input-bordered" required />
          </label>
          <label class="form-control">
            <div class="label">
              <span class="label-text">Mot de passe</span>
            </div>
            <input type="password" name="password" class="input input-bordered" required />
          </label>
          <button class="btn btn-primary w-full" type="submit">Se connecter</button>
        </form>
        <p class="text-sm text-base-content/70">
          Pas encore de compte ?
          <a class="link link-primary" href="/register">Créer un compte</a>.
        </p>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
